<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/scrollView_home"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@drawable/home_excase1"
                android:contentDescription="home_excase1" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@drawable/home_excase2"
                android:contentDescription="home_excase2" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@drawable/home_excase3"
                android:contentDescription="home_excase3" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@drawable/home_excase4"
                android:contentDescription="home_excase4" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/home_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="안녕하세요?\n\nSolomio는 Instagram 및 Facebook의 사진을\n사용자만의 유니크한 케이스로 바꿔줍니다\n지금 시작해보세요!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView_home" />

    <Button
        android:id="@+id/goto_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/home_button_style"
        android:text="나만의 케이스 만들기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_intro"
        android:padding="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>